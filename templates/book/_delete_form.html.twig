<form style="display: inline-block" method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn" style="color: #0d6efd"><i class="bi bi-trash"></i></button>
</form>
