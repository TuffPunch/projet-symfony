{% extends 'logged.base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <style>
        th{
            width: 10%;
            padding: 20px;
        }
        td{
            padding: 20px;
            width: 20%;
        }
    </style>
       <h1 class="text-center">{{ book.name }} Details</h1>
    <div class="container p-0">
        <div class="row align-items-baseline">
            <div class="col-md-12 w-100 d-grid">
                <table class="table table-bordered" style="justify-self: center">
                    <tbody>
                    <tr>
                        <th>Reference</th>
                        <td>{{ book.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ book.name }}</td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td>{{ book.author }}</td>
                    </tr>
                    <tr>
                        <th>Actions</th>
                        <td class="d-flex justify-content-start w-100">
                            <a class="p-2" href="{{ path('app_book_edit', {'id': book.id}) }}"><i class="bi bi-pen"></i></a>
                            {{ include('book/_delete_form.html.twig') }}

                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}
